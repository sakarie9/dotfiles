{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  //"width": 1280, // Waybar width
  "height": 34,
  // Margins value using the css format without units.
  //"margin": "",
  // Margins value without units.
  "margin-top": 4,
  //"margin-bottom": 10,
  "margin-left": 8,
  "margin-right": 8,
  // Size of gaps in between of the different modules. Default: 4.
  "spacing": 4,
  // Choose the order of the modules
  "modules-left": [
    "custom/launcher",
    "hyprland/workspaces",
    // "wlr/workspaces",
    "custom/music"
  ],
  "modules-center": [
    "clock",
    "custom/weather"
  ],
  "modules-right": [
    "tray",
    "cpu",
    "memory",
    "pulseaudio"
    //"custom/notification"
  ],
  "wlr/workspaces": {
    "on-click": "activate",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1"
  },
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },
  "cpu": {
    "interval": 5,
    "format": "   {usage:2}% ({load:0.2f})",
    "states": {
      "warning": 70,
      "critical": 90
    },
    "on-click": "foot --override=font='Sarasa Term SC Nerd:size=10' htop"
  },
  "memory": {
    "interval": 5,
    "format": "   {used:0.1f}G/{total:0.1f}G",
    "on-click": "foot --override=font='Sarasa Term SC Nerd:size=10' btop"
  },
  "custom/music": {
    "format": "   {}",
    "escape": true,
    "interval": 5,
    "tooltip": false,
    "exec": "playerctl metadata --format='{{ title }} - {{ artist }}'",
    "on-click": "playerctl play-pause",
    "on-scroll-down": "playerctl next",
    "on-scroll-up": "playerctl previous",
    "max-length": 50
  },
  "clock": {
    "interval": 1,
    "timezone": "Asia/Shanghai",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "format-alt": "   {:%Y/%m/%d}",
    "format": "   {:%m-%d %A %H:%M:%S}",
    "calendar": {
      "format": {
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    }
  },
  "pulseaudio": {
    "scroll-step": 2, // %, can be a float
    "format": "{icon}  {volume}%",
    "format-muted": "",
    "format-icons": {
      "default": [
        "",
        "",
        " "
      ]
    },
    "on-click": "pavucontrol"
  },
  "custom/weather": {
    "interval": 1200,
    "tooltip-format": "{tooltip}",
    "exec": "curl 'https://wttr.in/Zhengzhou?format=1&m'"
  },
  "hyprland/window": {
    "format": " {:.40} ",
    "separate-outputs": false
  },
  "custom/launcher": {
    "format": " ",
    "on-click": "rofi -show drun",
    "tooltip": false
  },
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "",
      "none": "",
      "dnd-notification": "",
      "dnd-none": "",
      "inhibited-notification": "",
      "inhibited-none": "",
      "dnd-inhibited-notification": "",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "escape": true
  }
}
